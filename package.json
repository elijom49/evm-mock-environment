{
  "name": "evm-mock-environment",
  "version": "1.0.0",
  "description": "Local Ethereum blockchain for testing and development",
  "main": "index.js",
  "scripts": {
    "node": "hardhat node",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "accounts": "hardhat run scripts/accounts.js --network localhost",
    "interact": "hardhat run scripts/interact.js --network localhost",
    "example:basic": "hardhat run examples/deploy-and-interact.js --network localhost",
